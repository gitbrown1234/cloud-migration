<form version="1.1" theme="dark">
  <label>KVStore Migration</label>
  <description>KVStore Migration</description>
  <fieldset submitButton="false">
    <input type="text" token="splunk_host">
      <label>Splunk Host</label>
    </input>
    <input type="text" token="auth_token" searchWhenChanged="false">
      <label>token</label>
    </input>
    <input type="text" token="file_path">
      <label>File Path</label>
    </input>
    <input type="radio" token="dry_run">
      <label>Dry Run</label>
      <choice value="true">true</choice>
      <choice value="false">false</choice>
      <default>true</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <search>
          <query>| kvstoremigrator splunk_host="$splunk_host$" auth_token="$auth_token$" base_path="$file_path$" all_apps=true dry_run=$dry_run$  | reverse</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="count">100</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
</form>